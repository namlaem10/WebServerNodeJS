doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    <base href="/">
    title Manager Travel Sharing - Admin
    // Custom fonts for this template vendor/fontawesome-free/css/all.min.css
    link(href='/vendor/fontawesome-free/css/all.min.css', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i', rel='stylesheet')
    // Custom styles for this template
    link(href='/css/sb-admin-2.min.css', rel='stylesheet')
  body.bg-gradient-primary
    // Outer Row
    .container
      .row.justify-content-center
        .col-xl-10.col-lg-12.col-md-9
          .card.o-hidden.border-0.shadow-lg.my-5
            .card-body.p-0
              // Nested Row within Card Body
              .row
                .col-lg-6.d-none.d-lg-block.bg-login-image
                .col-lg-6
                  .p-5
                    .text-center
                      h1.h4.text-gray-900.mb-4 Welcome Back!
                    if error
                      .text-center
                      p(style="color:red;")= error
                    form.user( action="/login" method="POST")
                      .form-group
                        input#exampleInputEmail.form-control.form-control-user(name="email" type='email', aria-describedby='emailHelp', placeholder='Nhập tài khoản' required)
                      .form-group
                        input#exampleInputPassword.form-control.form-control-user(name="password" type='password', placeholder='Password' required)
                      .form-group
                      .custom-control.custom-checkbox.small
                        input#customCheck.custom-control-input(type='checkbox' name="checkbox")
                        label.custom-control-label(for='customCheck') Remember Me
                      button.btn.btn-primary.btn-user.btn-block(href='#' style='text-align: center;')
                        | Login 
                    hr
                    .text-center
                      a.small(href='/') Forgot Password?
                    .text-center
                      a.small(href='/') Create an Account!

    // Bootstrap core JavaScript
    script(src='/vendor/jquery/jquery.min.js')
    script(src='/vendor/bootstrap/js/bootstrap.bundle.min.js')
    // Core plugin JavaScript
    script(src='/vendor/jquery-easing/jquery.easing.min.js')
    // Custom scripts for all pages
    script(src='/js/sb-admin-2.min.js')